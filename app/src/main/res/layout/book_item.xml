<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="book"
            type="com.nearsoft.nearbooks.view.models.BookViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewBookCover"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="16dp"
            android:transitionName="@string/transition_book_cover"
            app:error="@{@drawable/ic_launcher}"
            app:imageUrl="@{@string/url_book_covers_api(book.isbn, false)}"
            tools:targetApi="21" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewBookTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{book.title}"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                tools:text="Title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewBookISBN"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@{@string/label_isbn(book.isbn)}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    tools:text="ISBN" />

                <TextView
                    android:id="@+id/textViewBookYear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@{@string/label_year(book.year)}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    tools:text="2015" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>