<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="book"
            type="com.nearsoft.nearbooks.models.sqlite.Book"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal">

        <com.nearsoft.nearbooks.view.widgets.SquareFrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="16dp">

            <ImageView
                android:id="@+id/imageViewBookCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/content_description_book_cover"
                android:scaleType="centerCrop"
                app:error="@{@drawable/ic_launcher}"
                app:imageUrl="@{@string/url_book_cover_thumbnail(book.id)}"
                tools:targetApi="21"/>

        </com.nearsoft.nearbooks.view.widgets.SquareFrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewBookTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{book.title}"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                tools:text="Title"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewBookISBN"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@{@string/label_id(book.id)}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    tools:text="ISBN"/>

                <TextView
                    android:id="@+id/textViewBookYear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@{@string/label_year(book.releaseYear)}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    tools:text="2015"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>