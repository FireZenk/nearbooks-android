<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.BookDetailFragment">

    <data>

        <variable
            name="book"
            type="com.nearsoft.nearbooks.models.viewmodels.BookViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewBookISBN"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@{@string/label_isbn(book.isbn)}"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                tools:text="ISBN" />

            <TextView
                android:id="@+id/textViewBookYear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@{@string/label_year(book.year)}"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                tools:text="2015" />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewBookTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{book.title}"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textIsSelectable="true"
            tools:text="Text" />

        <TextView
            android:id="@+id/textViewBookAvailability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{book.isAvailable ? @string/label_book_available : @string/label_book_borrowed(book.author)}"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            tools:text="Availability" />

    </LinearLayout>
</layout>